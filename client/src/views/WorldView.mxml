			private function onEnterFrame(evt:Event):void
			{
				var time:Number = getTimer();
				var deltaTime:Number = time - lastTime;
				var lockedDelta:Number = Math.min(100, deltaTime);
				fps = 1000/deltaTime;
				myMemory = System.totalMemory;
				lastTime = time;
				
				checkDrag();
				checkCustomerPersonManager(lockedDelta);
				
				
//				if (bandManager)
//				{	
//					bandManager.update(lockedDelta);
//				}
			}
			
			public function checkCustomerPersonManager(lockedDelta:Number):void
