			private function getNumberOfBitmaps():void
			{
				var totalStructures:int = 0;
				for each (var os:OwnedStructure in structureManager.owned_structures)
				{
					if (os.structure.structure_type == "Booth")
					{
						totalStructures++;
					}
				}
				bitmapBlotter.expectedAssetCount = venueManager.numStaticCustomers + totalStructures;				
			}
			
